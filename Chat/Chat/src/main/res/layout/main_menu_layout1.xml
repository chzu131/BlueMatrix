<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00A0E9">

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="@drawable/menu_bg">

        <FrameLayout
            android:layout_width="280dp"
            android:layout_height="280dp"
            android:layout_gravity="center"
            android:background="@drawable/menu_center_bg">

            <Button
                android:id="@+id/menu_center"
                android:layout_width="@dimen/menu_center_button_size"
                android:layout_height="@dimen/menu_center_button_size"
                android:layout_gravity="center"
                android:background="@drawable/menu_center_selector" />

            <Button
                android:id="@+id/menu_up"
                android:layout_width="@dimen/menu_button_width"
                android:layout_height="@dimen/menu_button_height"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/menu_up_selector" />

            <Button
                android:id="@+id/menu_down"
                android:layout_width="@dimen/menu_button_width"
                android:layout_height="@dimen/menu_button_height"
                android:layout_gravity="center_horizontal|bottom"
                android:background="@drawable/menu_down_selector" />

            <Button
                android:id="@+id/menu_left"
                android:layout_width="@dimen/menu_button_height"
                android:layout_height="@dimen/menu_button_width"
                android:layout_gravity="center_vertical|left"
                android:background="@drawable/menu_left_selector" />

            <Button
                android:id="@+id/menu_right"
                android:layout_width="@dimen/menu_button_height"
                android:layout_height="@dimen/menu_button_width"
                android:layout_gravity="center_vertical|right"
                android:background="@drawable/menu_right_selector"
                />

        </FrameLayout>


    </FrameLayout>

    <View
        android:layout_width="110dp"
        android:layout_height="45dp"
        android:layout_margin="10dp"
        android:background="@drawable/logo"/>

    <Button
        android:id="@+id/disconnet_button"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:background="@drawable/button_selector"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="16dp"
        android:text="Disconnet"
        android:layout_gravity="right"
        />

    <LinearLayout
        android:layout_width="330dp"
        android:layout_height="90dp"
        android:layout_margin="10dp"
        android:layout_gravity="bottom|center_horizontal"
        android:background="@drawable/shortcut_function_bg"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/smile_button"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@null"
                android:src="@drawable/smile_button_selector"
                />
            <ImageButton
                android:id="@+id/heart_button"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@null"
                android:src="@drawable/heart_button_selector"
                />
            <ImageButton
                android:id="@+id/sos_button"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@null"
                android:src="@drawable/sos_button_selector"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/foridden_button"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@null"
                android:src="@drawable/foridden_button_selector"
                />
            <ImageButton
                android:id="@+id/stop_button"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@null"
                android:src="@drawable/stop_button_selector"
                />

            <FrameLayout
                android:id="@+id/layoutIntelligenceControl"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="7dp"
                android:paddingBottom="7dp">
                <ToggleButton
                    android:id="@+id/AutoModeToggle"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:textOff=""
                    android:textOn=""
                    android:background="@drawable/toggle_selector"
                    android:checked="true"
                    />
            </FrameLayout>

        </LinearLayout>
    </LinearLayout>

</FrameLayout>
