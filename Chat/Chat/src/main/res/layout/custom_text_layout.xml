<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffffff"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingRight="20dp">

        <Button
            android:id="@+id/back"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_selector"
            android:text="BACK" />

        <Button
            android:id="@+id/disconnet_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_selector"
            android:layout_gravity="right"
            android:text="Disconnet"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            />

    </FrameLayout>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp">

        <com.BlueMatrix.view.CustomPreview
            android:id="@+id/custom_preview"
            android:layout_width="@dimen/custom_view_width"
            android:layout_height="@dimen/custom_view_height"
            android:layout_gravity="center" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15dp"
        android:gravity="center">

        <TextView
            android:id="@+id/TextViewContent"
            android:text="Contentï¼š"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/custom_text"
                android:layout_width="fill_parent"
                android:layout_height="19dp"
                android:textSize="18dp"
                android:singleLine="true"
                android:maxLength="22"
                android:typeface="serif"
                android:background="#ffffffff"
                android:textColor="#ff000000"
                android:digits="+-*/=! 0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"/>
            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="#018ae8"/>
            <TextView
                android:paddingTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(Supported character: 0-9 A-Z +-*/=!)"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        >
        <!--<ProgressBar-->
            <!--android:id="@+id/progressbar"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--style="?android:attr/progressBarStyleLargeInverse"-->
            <!--android:visibility="visible"-->
            <!--android:layout_alignParentTop="true"-->
            <!--/>-->

        <Button
            android:id="@+id/preview_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dp"
            android:background="@drawable/button_selector"
            android:text="PREVIEW"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            />

        <Button
            android:id="@+id/send_button"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_selector"
            android:text="SEND"
            />

    </LinearLayout>


</LinearLayout>
