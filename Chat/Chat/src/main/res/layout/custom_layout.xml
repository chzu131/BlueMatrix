<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingRight="20dp">

        <Button
            android:id="@+id/back"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_selector"
            android:text="BACK" />

        <Button
            android:id="@+id/disconnet_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_selector"
            android:layout_gravity="right"
            android:text="Disconnet"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"/>
    </FrameLayout>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp">

        <com.BlueMatrix.view.CustomView
            android:id="@+id/custom_view"
            android:layout_width="@dimen/custom_view_width"
            android:layout_height="@dimen/custom_view_height"
            android:layout_gravity="center" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|right">

        <RadioButton
            android:id="@+id/paint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_view_paint_selector"
            android:button="@null"
            android:checked="true" />

        <RadioButton
            android:id="@+id/shua"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_view_ex_selector"
            android:button="@null"
            android:checked="false" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_margin="20dp">
        <Button
            android:id="@+id/send"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dp"
            android:background="@drawable/button_selector"
            android:text="SET" />

        <Button
            android:id="@+id/reset"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_selector"
            android:text="RESET" />

    </LinearLayout>


</LinearLayout>
