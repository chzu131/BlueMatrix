<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#018ae8">


    <Button
        android:id="@+id/disconnet_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:background="@drawable/button_selector"
        android:textColor="#FF018ae8"
        android:textStyle="bold"
        android:text="Disconnet"
        android:layout_gravity="left"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        />

    <FrameLayout
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center_vertical"
        android:padding="6dp"
        android:paddingLeft="20dp"
        android:background="@drawable/menu_center_bg">

        <Button
            android:id="@+id/menu_center"
            android:layout_width="@dimen/menu_center_button_size"
            android:layout_height="@dimen/menu_center_button_size"
            android:layout_gravity="center"
            android:background="@drawable/menu_center_selector" />

        <Button
            android:id="@+id/menu_up"
            android:layout_width="@dimen/menu_button_width"
            android:layout_height="@dimen/menu_button_height"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/menu_up_selector" />

        <Button
            android:id="@+id/menu_down"
            android:layout_width="@dimen/menu_button_width"
            android:layout_height="@dimen/menu_button_height"
            android:layout_gravity="center_horizontal|bottom"
            android:background="@drawable/menu_down_selector" />

        <Button
            android:id="@+id/menu_left"
            android:layout_width="@dimen/menu_button_height"
            android:layout_height="@dimen/menu_button_width"
            android:layout_gravity="center_vertical|left"
            android:background="@drawable/menu_left_selector" />

        <Button
            android:id="@+id/menu_right"
            android:layout_width="@dimen/menu_button_height"
            android:layout_height="@dimen/menu_button_width"
            android:layout_gravity="center_vertical|right"
            android:background="@drawable/menu_right_selector"
            />
    </FrameLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:paddingBottom="160dp"
        android:orientation="vertical">
        <Button
            android:id="@+id/smile_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_selector"
            android:textColor="#FF018ae8"
            android:textStyle="bold"
            android:text="smile"
            />
        <Button
            android:id="@+id/heart_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_selector"
            android:textColor="#FF018ae8"
            android:textStyle="bold"
            android:text="heart"
            />
        <Button
            android:id="@+id/sos_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_selector"
            android:textColor="#FF018ae8"
            android:textStyle="bold"
            android:text="SOS"
            />
        <Button
            android:id="@+id/foridden_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_selector"
            android:textColor="#FF018ae8"
            android:textStyle="bold"
            android:text="foridden"
            />
        <Button
            android:id="@+id/stop_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_selector"
            android:textColor="#FF018ae8"
            android:textStyle="bold"
            android:text="stop"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:paddingBottom="20dp"
        android:visibility="gone"
        android:id="@+id/layoutIntelligenceControl"
        >
        <TextView
            android:text="@string/intelligenceControl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="10dp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            />
        <ToggleButton
            android:id="@+id/AutoModeToggle"
            android:layout_width="93dp"
            android:layout_height="41dp"
            android:textOff=""
            android:textOn=""
            android:background="@drawable/toggle_selector"
            android:checked="true"
            />

    </LinearLayout>

</FrameLayout>
