<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#dcdddd">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/bt_logo"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_marginTop="40dp">

        <TextView
            android:id="@+id/textSeaching"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Search for Bluetooth devices..."
            android:visibility="visible"/>
        <TextView
            android:id="@+id/textSearchEnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Search end."
            android:visibility="visible"/>
        <ListView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@drawable/bt_list_bg"
            android:listSelector="@drawable/list_select"
            android:layout_marginTop="4dp"
            />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="30dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Button
                android:id="@+id/btnRefresh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/orange_button_selector"
                android:text="刷新"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="#FFFFFF"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="#adadaf"
                android:textSize="14dp"
                android:layout_margin="4dp"
                android:text="REFRESH"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Button
                android:id="@+id/connect_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/blue_button_selector"
                android:textStyle="bold"
                android:textSize="20dp"
                android:text="连接"
                android:textColor="#FFFFFF"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="#adadaf"
                android:textSize="14dp"
                android:layout_margin="4dp"
                android:text="CONNECT"/>
        </LinearLayout>
     </LinearLayout>
    </LinearLayout>


</FrameLayout>